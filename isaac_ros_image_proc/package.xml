<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>isaac_ros_image_proc</name>
  <version>4.0.0</version>
  <description>Single image rectification and color processing</description>

  <maintainer email="isaac-ros-maintainers@nvidia.com">Isaac ROS Maintainers</maintainer>
  <license>Apache-2.0</license>
  <url type="website">https://developer.nvidia.com/isaac-ros-gems/</url>
  <author>Swapnesh Wani</author>
  <author>Jaiveer Singh</author>
  <author>Piero Orderique</author>
  <author>Tao Zhang</author>
  <author>Tobi Alade</author>
  <author>Shubham Tyagi</author>
  <author>Toya Takahashi</author>

  <buildtool_depend>ament_cmake_auto</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>rclcpp_components</depend>
  <depend>isaac_ros_nitros</depend>
  <depend>isaac_ros_nitros_image_type</depend>
  <depend>isaac_ros_nitros_camera_info_type</depend>
  <depend>isaac_ros_nitros_tensor_list_type</depend>
  <depend>gxf_isaac_messages</depend>
  <depend>isaac_ros_managed_nitros</depend>
  <depend>message_filters</depend>

  <build_depend>isaac_ros_common</build_depend>
  <build_depend>gxf_isaac_gems</build_depend>
  <build_depend>ament_index_cpp</build_depend>

  <exec_depend>gxf_isaac_camera_utils</exec_depend>
  <exec_depend>gxf_isaac_image_flip</exec_depend>
  <exec_depend>gxf_isaac_message_compositor</exec_depend>
  <exec_depend>gxf_isaac_tensorops</exec_depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>isaac_ros_test</test_depend>
  <test_depend>ament_cmake_gtest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
